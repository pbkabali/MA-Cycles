<table>
  <thead>
    <tr>
      <th colspan="1"></th>
      <th colspan="1"></th>
      <th colspan="1"></th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag(avatar_url(user.Photo), :class =>'avatar rounded')%></td>
        <td class='author color-auto'><%= user.FullName %></td>
        <td><%= link_to 'See Profile', user %></td>
        <td>
          <%if current_user?(user)%>
            <button class='follow-btn me-btn'>Me</button>
          <%else%>
            <%if following?(user)%>
              <%= button_to 'Unfollow', following_path(id: user.id), method: 'delete', class: 'follow-btn unfollow-btn' %>
            <%else%>
              <%= button_to 'Follow', followings_path(id: user.id), method: 'post', class: 'follow-btn' %>
            <%end%>
          <%end%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>